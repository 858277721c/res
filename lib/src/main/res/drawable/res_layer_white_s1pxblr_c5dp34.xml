<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/res_stroke"/>

            <corners android:bottomLeftRadius="@dimen/res_corner_5dp"
                     android:bottomRightRadius="@dimen/res_corner_5dp"/>
        </shape>
    </item>
    <item android:bottom="@dimen/res_size_stroke_1px"
          android:left="@dimen/res_size_stroke_1px"
          android:right="@dimen/res_size_stroke_1px">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>

            <corners android:bottomLeftRadius="@dimen/res_corner_5dp"
                     android:bottomRightRadius="@dimen/res_corner_5dp"/>
        </shape>
    </item>

</layer-list>