<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="res_button_base"></style>

    <!-- 按钮 -->
    <style name="res_button" parent="res_button_base">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/res_text_m</item>
        <item name="android:ellipsize">end</item>
        <item name="android:minHeight">@dimen/res_height_button</item>
    </style>

    <!-- 主题色按钮 -->
    <style name="res_button_main_color" parent="res_button">
        <item name="android:background">@drawable/res_sel_button_main_color</item>
        <item name="android:textColor">@color/res_sel_text_button_disable_white_enabled</item>
    </style>

</resources>